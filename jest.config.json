{
    "bail": true,
    "expand": true,
    "rootDir": "./",
    "verbose": true,
    "useStderr": true,
    "forceExit": true,
    "logHeapUsage": true,
    "name": "daciolo",
    "collectCoverage": true,
    "testURL": "http://localhost/",
    "coverageDirectory": "./coverage",
    "testRegex": "(./tests/.*| (\\.|/)(test|spec))\\.(jsx?)$",
    "moduleNameMapper": {
        "daciolo": "<rootDir>/daciolo.js",
        "quotes": "<rootDir>/quotes.js"
    },
    "coveragePathIgnorePatterns": [
        "./node_modules/",
        "./dist/"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
}
